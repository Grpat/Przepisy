@model IEnumerable<Hostele.Models.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Moje Przepisy</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Zobacz Przepis</a>
               
            </td>
             <td>
                 <a asp-action="UserRecipeDetails" asp-route-id="@item.Id">Edytuj</a> 
                 </td>
        </tr>
}
    </tbody>
</table>
