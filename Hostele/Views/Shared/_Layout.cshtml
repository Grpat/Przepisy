@using Hostele.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] Przepisy</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/bootswatch3.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Giga Przepisy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Recipe" asp-action="MainView">Przepisy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Recipe" asp-action="Create">Dodaj Przepis</a>
                    </li>
                   
                   @if (User.IsInRole(SD.Role_Admin))
                   {
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="Step" asp-action="Index">Kroki</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="Ingredients" asp-action="Index">Składniki</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="Category" asp-action="Index">Kategorie</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="Recipe" asp-action="Index">Przepis</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="RoleManager" asp-action="Index">Role</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " asp-area="" asp-controller="UserRoles" asp-action="Index">Zarządzanie Rolami</a>
                       </li>
                   }
                  
                </ul>
                <partial name="_LoginPartial"/>
               
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>



<footer class=" text-center text-lg-start " style="background-color: rgba(0, 0, 0, 0.05);">
    <!-- Grid container -->
    <div class="container">
        <!--Grid row-->
        <div class="row pt-4 pb-4">
            <!--Grid column-->
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5 class="text-uppercase">Przepisy</h5>
                <ul class="list-unstyled mb-0">
                    <li>
                        <a href="#!" class="text-muted text-decoration-none">Quisque hendrerit nec sapien sed porttitor. Morbi semp</a>
                    </li>
                    <li>
                        <a href="#!" class="text-muted text-decoration-none">er auctor leo, ac malesuada</a>
                    </li>
                    <li>
                        <a href="#!"class="text-muted text-decoration-none"> lacus finibus quis. Aliquam purus augue, lobortis </a>
                    </li>
                    <li>
                        <a href="#!"class="text-muted text-decoration-none">ultricies orci et, mattis maximus nunc. Ut aliquet lorem at quam tincidunt feugiat. Aenean dui mag</a>
                    </li>
                </ul>

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h4 class="text-uppercase"></h4>


            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </div>
    <!-- Grid container -->

    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.1);">
        © 2020 Przepisy
        <a class="text-success">Wszystkie prawa zastrzeżone.</a>
    </div>
    <!-- Copyright -->
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>