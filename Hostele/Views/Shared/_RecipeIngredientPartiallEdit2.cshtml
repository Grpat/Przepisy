@using HtmlHelpers.BeginCollectionItemCore
@model Hostele.ViewModels.IngredientCreateViewModel
<div class="row pt-3" id="@Model?.UniqueId">
@using (Html.BeginCollectionItem("Ingrds"))
{
    <div class="col-sm-4">
     
        <label asp-for="IngredientName" class="control-label"></label>
                <input asp-for="IngredientName" class="form-control" />
                <span asp-validation-for="IngredientName" class="text-danger"></span>
    </div>
    <div class="col-sm-3">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="col-sm-3">
        <label asp-for="Measure" class="control-label"></label>
        <select asp-for="Measure" class="form-control" asp-items="Html.GetEnumSelectList<Measure>()">
            <span asp-validation-for="Measure" class="text-danger"></span>
        </select>
    </div>
    <div class="col-sm-1 ">
          <a style="visibility:hidden"> Delete</a>   @*just to make the button align *@  
        <button type="button" id="Btn_DeleteSteps" onclick="deleteIngredient(document.getElementById('@Model.UniqueId'))" class="btn btn-outline-danger">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}
</div>